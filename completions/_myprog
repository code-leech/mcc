#compdef myprog

autoload -U is-at-least

_myprog() {
    typeset -A opt_args
    typeset -a _arguments_options
    local ret=1

    if is-at-least 5.2; then
        _arguments_options=(-s -S -C)
    else
        _arguments_options=(-s -C)
    fi

    local context curcontext="$curcontext" state line
    _arguments "${_arguments_options[@]}" : \
'-v+[Verbose mode]: :_default' \
'-h[Print help]' \
'--help[Print help]' \
&& ret=0
}

(( $+functions[_myprog_commands] )) ||
_myprog_commands() {
    local commands; commands=()
    _describe -t commands 'myprog commands' commands "$@"
}

if [ "$funcstack[1]" = "_myprog" ]; then
    _myprog "$@"
else
    compdef _myprog myprog
fi
